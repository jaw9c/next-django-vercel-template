{
  "builds": [
    { "src": "backend/api/wsgi.py", "use": "@vercel/python", "config": {
      "excludeFiles":  "{.next,*.cache,node_modules,public,app}/**",
      "root": "backend"
    } },
    { "src": "package.json", "use": "@vercel/next", "config": {
      "excludeFiles":  "{backend}/**"
    } }
  ],
  "routes": [
    {
      "src": "/api(.*)",
      "dest": "backend/api/wsgi.py"
    },
    { "src": "/.*", "dest": "./*" }
  ]
}
